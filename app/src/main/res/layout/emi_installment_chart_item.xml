<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/installmentSerialTxt"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="8dp"
            android:background="#FFF"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/installmentDateTxt"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="8dp"
            android:background="#FFF"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/installmentInterestTxt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="8dp"
            android:background="#FFF"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/openingBalanceTxt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="8dp"
            android:background="#FFF"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/principleAmountTxt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="8dp"
            android:background="#FFF"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/installmentAmountTxt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="8dp"
            android:background="#FFF"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/endingBalanceTxt"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="8dp"
            android:background="#FFF"
            android:textColor="#000000"
            />


</LinearLayout>