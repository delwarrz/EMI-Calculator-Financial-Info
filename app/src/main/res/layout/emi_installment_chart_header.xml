<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/installmentListSerialHeader"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="1dp"
        android:padding="8dp"
        android:background="#FFF"/>
    <TextView
        android:id="@+id/installmentDateHeader"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="1dp"
        android:padding="8dp"
        android:background="#FFF"
        />
    <TextView
        android:id="@+id/installmentInterestHeader"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="1dp"
        android:padding="8dp"
        android:background="#FFF"
        />
    <TextView
        android:id="@+id/openingBalanceHeader"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="1dp"
        android:padding="8dp"
        android:background="#FFF"
        />
    <TextView
        android:id="@+id/principleAmountHeader"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="1dp"
        android:padding="8dp"
        android:background="#FFF"
        />
    <TextView
        android:id="@+id/installmentAmountHeader"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="1dp"
        android:padding="8dp"
        android:background="#FFF"
        />
    <TextView
        android:id="@+id/endingBalanceHeader"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="1dp"
        android:padding="8dp"
        android:background="#FFF"
        />
</LinearLayout>